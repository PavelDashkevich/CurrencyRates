<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.rates.FragmentRates">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/screen_rates_title"
        style="@style/Toolbar"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glVerticalStart"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/list_default_margin" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glVerticalEnd"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/list_default_margin" />

    <View
        android:id="@+id/vHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_header_height"
        app:layout_constraintTop_toBottomOf="@id/tbActions"
        android:background="?attr/colorSecondary"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvDateLast"
        android:layout_width="@dimen/list_column_rate_width"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/vHeader"
        app:layout_constraintBottom_toBottomOf="@id/vHeader"
        app:layout_constraintEnd_toEndOf="@id/glVerticalEnd"
        tools:text="13.11.17"
        style="@style/TextView.ListHeader"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvDateFirst"
        android:layout_width="@dimen/list_column_rate_width"
        android:layout_height="0dp"
        app:layout_constraintEnd_toStartOf="@id/tvDateLast"
        app:layout_constraintTop_toTopOf="@id/vHeader"
        app:layout_constraintBottom_toBottomOf="@id/vHeader"
        tools:text="13.11.17"
        style="@style/TextView.ListHeader"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRates"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/vHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/glVerticalStart"
        app:layout_constraintEnd_toEndOf="@id/glVerticalEnd"/>

    <ProgressBar
        android:id="@+id/pbProgress"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tbActions"
        app:layout_constraintBottom_toBottomOf="parent"
        android:indeterminate="true"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>